/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

page {
  background: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

/* common */
/* 阴影 */
.common_shadow {
  box-shadow: 0rpx 5rpx 20rpx 2rpx #7a7a7a30;
}
/* 布局 */
.flex_column_center {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.flex_row_center {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
