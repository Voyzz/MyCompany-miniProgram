/* miniprogram/pages/homepage/homepage.wxss */
.container {
    width: 750rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
    position: relative;
}


/* 头图 */
.swiper_box {
    width: 750rpx;
    height: 360rpx;
}
.swiper_img {
    width: 750rpx;
    height: 360rpx;
}


/* 搜索框 */
.search_box {
    width: 750rpx;
    /* position: absolute;
    top: 20rpx; */
    margin: 15rpx;
}
.input_class {
    font-size: 25rpx;
    background-color: #fff;
}


/* 产品推荐 */
.goods_container {
    margin-bottom: 20rpx;
    border-radius: 10rpx;
}
.goods_box {
    box-sizing: border-box;
    width: 690rpx;
    height: 240rpx;
    white-space: nowrap;
    padding-left: 20rpx;
}
.goods_item {
    display: inline-block;
    width: 250rpx;
    height: 200rpx;
    margin: 20rpx 20rpx 20rpx 0;
    background-color: #e3e3e3;
    border-radius: 10rpx;
    overflow: hidden;
    position: relative;
}
.goods_img {
    width: 250rpx;
    height: 200rpx;
}
.goods_title {
    width: 250rpx;
    height: 50rpx;
    color: #fff;
    font-size: 25rpx;
    line-height: 50rpx;
    text-align: center;
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: #00000050;
}
.goods_dec_box {
    box-sizing: border-box;
    height: 65rpx;
    width: 650rpx;
    padding:10rpx;
    border-bottom-style: dashed;
    border-bottom-width: 1rpx;
    border-bottom-color: #ececec;
}
.goods_dec {
    font-size: 25rpx;
    color: #8a8a8a;
}
.goods_more {
    font-size: 20rpx;
    color: #8a8a8a;
}


/* 标语 */
.slogan_box {
    box-sizing: border-box;
    width: 750rpx;
    background-color: #fff;
    padding: 0rpx 25rpx;
    margin-top: 30rpx;
    margin-bottom: 80rrpx;
}
.slogan_img {
    width: 650rpx;
    height: 320rpx;
    margin-top: 10rpx;
    background-color: #fff;
}


/* 新闻资讯 */
.news_container {
    margin-top: 50rpx;
}
.news_box {
    box-sizing: border-box;
    width: 690rpx;
    margin-bottom: 30rpx;
    border-radius: 10rpx;
    margin-top: 10rpx;
    padding: 20rpx 20rpx;
}
.news_left {
    width: 500rpx;
    margin-right: 20rpx;
}
.news_item_box {
    box-sizing: border-box;
    width: 640rpx;
    padding: 30rpx 20rpx;
    height: 250rpx;
}
.news_coverImg {
    width: 180rpx;
    height: 180rpx;
    border-radius: 10rpx;
    overflow: hidden;
}
